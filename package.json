{
  "name": "cj-tools",
  "description": "Carlton's Tools",
  "version": "0.1.0",
  "author": "Carlton Joseph",
  "private": true,
  "main": "public/electron.js",
  "home": "./",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev":
      "concurrently -k \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "build --em.main=build/electron.js",
    "eb": "electron-builder",
    "dist": "yarn pack && yarn eb",
    "cjtools": "dist/linux-unpacked/cj-tools",
    "snap": "snap install --dangerous dist/cj-tools_0.1.0_amd64.snap"
  },
  "devDependencies": {
    "electron": "^1.8.3",
    "concurrently": "^3.5.1",
    "wait-on": "^2.1.0",
    "electron-builder": "^20.4.1"
  },
  "build": {
    "appId": "com.carltonjoseph.cj-tools",
    "productName": "Carlton's Tools",
    "copyright": "Copyright @ 2018 Carlton Joseph",
    "files": ["build/**/*", "node_modules/**/*"],
    "directories": { "buildResources": "assets" },
    "linux": {
      "target": "snap"
    }
  }
}
